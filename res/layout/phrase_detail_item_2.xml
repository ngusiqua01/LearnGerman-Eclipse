<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/phrase_detail_item_background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/txt_vietnam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="12. xin chao hello korea"
            android:textColor="#000099"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/item_hide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/txt_korea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="xin chao hello vietnam"
                android:textColor="#000000"
                android:textSize="17dp"
                android:textStyle="bold" />

            <!--
                 <TextView
                android:id="@+id/txt_pinpyn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="xin chao hello pinyin xin chao hello pinyin xin chao hello pinyin xin chao hello pinyin xin chao hello pinyin"
                android:textColor="#0066cc"
                android:textSize="15dp"
                android:textStyle="italic" />
            -->
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgVoice"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical|end"
        android:onClick="playsound"
        android:src="@drawable/icon_favorite" />

</FrameLayout>