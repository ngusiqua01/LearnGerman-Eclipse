<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
    
    <FrameLayout 
        android:layout_width="@dimen/item_grid_phrase_width"
        android:layout_height="@dimen/item_grid_phrase_height"
        android:layout_marginTop="15dp">

	    <ImageView
	        android:id="@+id/img_grid_item"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:duplicateParentState="true"
	        android:src="@drawable/nav_arrow_back" />
	    
	    <ImageView
	        android:id="@+id/img_grid_item_pressed"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:duplicateParentState="true"
	        android:background="@drawable/grid_item_background"/>
    </FrameLayout>

    <TextView
        android:id="@+id/txt_grid_item"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:gravity="top|center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:lines="2"
        android:text="test text test text test text "
        android:textColor="@color/phrase_item_text_color_selector"
        android:textSize="15dp" />

</LinearLayout>